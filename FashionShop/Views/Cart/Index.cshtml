
@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double x =0;
    List<FashionShop.Models.CartItem> giohang = Session["giohang"] as List<FashionShop.Models.CartItem>;
}

<section class="header_text sub">
    <img class="pageBanner" src="../themes/images/pageBanner.png" alt="New products">
    <h4><span>Giỏ hàng của bạn</span></h4>
</section>
<section class="main-content">
    <div class="row">
        <div class="span9">
            <h4 class="title"><span class="text"><strong>Giỏ hàng</strong></span></h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Xóa</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @if (giohang == null)
                    {
        <p>Không có sản phẩm nào trong giỏ</p> }
                    else
                    {
                        foreach (var sp in giohang)
                        {
        <tr>
            <td> <a href="/Cart/XoaKhoiGio?masp=@sp.MASP" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');" class="btn btn-danger btn-sm">Xóa</a> </td>
            <td><a href="/Product/Product_Detail/@sp.MASP"><img alt="" src="../themes/images/Image/@sp.HINHANH" width="150" height="150"></a></td>
            <td>@sp.TENSP</td>
            <td><input type="text" value="@sp.SoLuong" class="input-mini"></td>
            <td>@sp.GIA</td>
            <td>@sp.ThanhTien</td>
        </tr>x += sp.ThanhTien;
                        }
                    }
                    <tr>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td><strong>@x VNĐ</strong></td>
                    </tr>
                </tbody>
            </table>

            <hr>
            <p class="cart-total right">
            </p>
            <hr />
            <p class="buttons right">

                <a href="/Cart/ThanhToan">Thanh toán</a>
            </p>
        </div>
        <div class="span3 col">
            <div class="block">
                <ul class="nav nav-list">
                    <li class="nav-header">LOẠI SẢN PHẨM</li>
                    <li><a href="products.cshtml">QUẦN</a></li>
                    <li><a href="products.cshtml">ÁO</a></li>
                    <li><a href="products.cshtml">TÚI</a></li>

                </ul>
                <br />
                <ul class="nav nav-list below">
                    <li class="nav-header">NHÀ CUNG CẤP</li>
                    <li><a href="products.cshtml">Adidas</a></li>
                    <li><a href="products.cshtml">Nike</a></li>
                    <li><a href="products.cshtml">Dunlop</a></li>

                </ul>
            </div>

            <div class="block">
                <h4 class="title"><strong>Best</strong> Seller</h4>
                <ul class="small-product">
                    <li>
                        <a href="#" title="Mẫu 1">
                            <img src="../themes/images/ladies/1.jpg" alt="">
                        </a>
                        <a href="#">Mẫu 1</a>
                    </li>
                    <li>
                        <a href="#" title="Mẫu 2">
                            <img src="../themes/images/ladies/2.jpg" alt="">
                        </a>
                        <a href="#">Mẫu 2</a>
                    </li>
                    <li>
                        <a href="#" title="Mẫu 3">
                            <img src="../themes/images/ladies/3.jpg" alt="">
                        </a>
                        <a href="#">Mẫu 3</a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</section>

